{
    "name": "vgirol/jsonapi-assert",
    "description": "This package provides a set of assertions to test documents using the JSON:API specification.",
    "type": "library",
    "homepage": "http://github.com/VGirol/JsonApi-Assert",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "phpunit/phpunit": "^8.0"
    },
    "require-dev": {
        "infection/infection": "dev-master"
    },
    "authors": [
        {
            "name": "Vincent Girol",
            "email": "vincent@girol.fr"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@setup"
        ],
        "setup": "bash install/setup.sh",
        "test": "./vendor/bin/phpunit tests ",
        "coverage": "./vendor/bin/phpunit tests --coverage-xml=build/coverage/coverage-xml --log-junit=build/coverage/phpunit.junit.xml",
        "infection": "infection --coverage=build/coverage --threads=$(nproc) --configuration=infection.json.dist",
        "phpcs": "phpcs --encoding=utf-8 --report-full=build/phpcs/phpcs.txt",
        "phpmd": [
            "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode --reportfile build/phpmd/src.txt --ignore-violations-on-exit",
            "phpmd tests text cleancode,codesize,controversial,design,naming,unusedcode --reportfile build/phpmd/tests.txt --ignore-violations-on-exit"
        ],
        "phan": "phan -m text -o build/phan/phan.txt & php -v",
        "php-linting": [
            "@phpcs",
            "@phpmd",
            "@phan"
        ],
        "build": [
            "@php-linting",
            "@coverage",
            "@infection"
        ],
        "travis": [
            "@coverage",
            "./vendor/bin/infection --coverage=build/coverage --threads=$(nproc) --configuration=infection.json.dist"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}

{
    "name": "vgirol/jsonapi-assert",
    "description": "This package provides a set of assertions to test documents using the JSON:API specification.",
    "type": "library",
    "homepage": "http://github.com/VGirol/JsonApi-Assert",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "phpunit/phpunit": "^8.0"
    },
    "require-dev": {
        "infection/infection": "dev-master"
    },
    "authors": [
        {
            "name": "Vincent Girol",
            "email": "vincent@girol.fr"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": "bash install/setup.sh",
        "post-update-cmd": [
            "@setup"
        ],
        "phpstan": "phpstan analyse src --level=7 & php -v",
        "phpcs": "phpcs --encoding=utf-8 --report-full=build/phpcs/phpcs.txt",
        "phpmd": [
            "phpmd src text phpmd.xml --reportfile build/phpmd/src.txt --ignore-violations-on-exit",
            "phpmd tests text phpmd-tests.xml --reportfile build/phpmd/tests.txt --ignore-violations-on-exit"
        ],
        "phan": "phan -m text -o build/phan/phan.txt & php -v",
        "phpcpd": "phpcpd src/",
        "phpmnd": "phpmnd src/ --extensions=all --strings --include-numeric-string --allow-array-mapping --xml-output=build/phpmnd/phpmnd.xml",
        "lint": [
            "@phpstan",
            "@phpcs",
            "@phpmd",
            "@phan",
            "@phpcpd",
            "@phpmnd"
        ],
        "test": "./vendor/bin/phpunit tests ",
        "coverage": "./vendor/bin/phpunit tests --coverage-xml=build/coverage/coverage-xml --log-junit=build/coverage/phpunit.junit.xml",
        "infection": "./vendor/bin/infection --coverage=build/coverage --threads=$(nproc) --configuration=infection.json.dist",
        "travis": [
            "@coverage",
            "@infection"
        ],
        "crap": "./vendor/bin/phpunit tests --coverage-html=build/coverage/html",
        "phpmetrics": "phpmetrics --report-html=build/phpmetrics --junit=build/coverage/phpunit.junit.xml src/,tests/",
        "build": [
            "@lint",
            "@travis",
            "@crap",
            "@phpmetrics"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}

{
    "name": "vgirol/jsonapi-assert",
    "description": "RESTfull JSON:Api test assertions",
    "type": "library",
    "homepage": "http://github.com/VGirol/JsonApi-Assert",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "phpunit/phpunit": "^8.0"
    },
    "require-dev": {
        "infection/infection": "dev-master",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "authors": [
        {
            "name": "Vincent Girol",
            "email": "vincent@girol.fr"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@setup"
        ],
        "setup": "bash install/setup.sh",
        "test": "./vendor/bin/phpunit tests ",
        "coverage": "./vendor/bin/phpunit tests --coverage-xml=build/coverage/coverage-xml --log-junit=build/coverage/phpunit.junit.xml",
        "infection": "./vendor/bin/infection --coverage=build/coverage --threads=$(nproc) --configuration=infection.json.dist",
        "build": [
            "@coverage",
            "@infection"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}

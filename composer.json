{
    "name": "vgirol/jsonapi-assert",
    "type": "library",
    "description": "This package provides a set of assertions to test documents using the JSON:API specification.",
    "keywords": [
        "vgirol",
        "jsonapi-assert",
        "unit tests",
        "JSON:API",
        "assertions"
    ],
    "homepage": "http://github.com/VGirol/JsonApi-Assert",
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent Girol",
            "email": "vincent@girol.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "phpunit/phpunit": "^8.0"
    },
    "require-dev": {
        "infection/infection": "^0.13"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VGirol\\JsonApiAssert\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": "bash install/setup.sh",
        "post-update-cmd": [
            "@setup"
        ],
        "test": "./vendor/bin/phpunit tests",
        "infection": "./vendor/bin/infection --coverage=build/coverage --threads=$(nproc) --configuration=infection.json",
        "travis": [
            "@test",
            "@infection"
        ],
        "build": [
            "@travis"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
